# DDK-i Chatbot Environment Variables
# Copy this file to .env and update with your values

# Required for Flask session security
SESSION_SECRET=your-secure-session-secret-here

# AWS Configuration
AWS_DEFAULT_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# S3 Configuration for Static Files
STATIC_FILES_BUCKET=ddktech-chatbot-static-files
STATIC_FILES_URL=https://ddktech-chatbot-static-files.s3.amazonaws.com

# Lambda Configuration
LAMBDA_DEPLOYMENT_BUCKET=ddktech-chatbot-lambda-deployments
LAMBDA_FUNCTION_NAME=ddktech-chatbot

# Database Configuration (Optional - for future use)
# DATABASE_URL=postgresql://user:password@host:port/database
# DYNAMODB_TABLE_NAME=ddktech-clients

# Production Settings
FLASK_ENV=production
DEBUG=False

# Monitoring and Logging
LOG_LEVEL=INFO
ENABLE_XRAY_TRACING=false

# Custom Domain (Optional)
# CUSTOM_DOMAIN=api.ddktech.com
# SSL_CERTIFICATE_ARN=arn:aws:acm:us-east-1:123456789012:certificate/abc123

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# Rate Limiting (Optional)
# RATE_LIMIT_ENABLED=true
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=3600